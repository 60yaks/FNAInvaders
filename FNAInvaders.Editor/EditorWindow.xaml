<Window
    x:Class="FNAInvaders.Editor.EditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:FNAInvaders.Editor.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FNAInvaders.Editor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Editor"
    Width="600"
    Height="720"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate x:Key="ComponentTemplate">
            <Border
                Margin="4"
                Background="LightCyan"
                BorderBrush="DarkCyan"
                BorderThickness="1">
                <Label Content="{Binding Converter={converters:NameSimplifier}}" />
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Label Content="{Binding World}" />

        <ItemsControl
            Grid.Row="1"
            Margin="10"
            ItemsSource="{Binding Systems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Content="{Binding Converter={converters:NameSimplifier}}" />
                        <CheckBox
                            Grid.Column="1"
                            Content="Enabled"
                            IsChecked="{Binding IsEnabled}" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ListBox
            Grid.Row="2"
            Margin="10"
            ItemsSource="{Binding Entities}"
            SelectedItem="{Binding SelectedEntity}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Content="{Binding}" />
                        <CheckBox
                            Grid.Column="1"
                            Content="Enabled"
                            IsChecked="{Binding Enabled}" />
                        <ItemsControl
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            ItemTemplate="{StaticResource ComponentTemplate}"
                            ItemsSource="{Binding Components}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>

        <ContentControl
            Grid.RowSpan="3"
            Grid.Column="1"
            Content="{Binding SelectedEntity}">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding}" />
                        <ItemsControl ItemTemplate="{StaticResource ComponentTemplate}" ItemsSource="{Binding Components}" />
                    </StackPanel>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</Window>
